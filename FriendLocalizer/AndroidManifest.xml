<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.edu.zut.mwojtalewicz.friendlocalizer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:allowTaskReparenting="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="pl.edu.zut.mwojtalewicz.friendlocalizer.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pl.edu.zut.mwojtalewicz.friendlocalizer.LogInActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="pl.edu.zut.mwojtalewicz.friendlocalizer.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="pl.edu.zut.mwojtalewicz.friendlocalizer.LoggedMainScreen"
            android:label="@string/title_activity_logged_main_screen" >
        </activity>
        <activity
            android:name="pl.edu.zut.mwojtalewicz.friendlocalizer.SearchFriendsActivity"
            android:label="@string/title_activity_search_friends" >
        </activity>
        <activity
            android:name="pl.edu.zut.mwojtalewicz.friendLocalizerLibrary.SearchFriendsListView"
            android:label="@string/title_activity_search_friends_list_view" >
        </activity>
        <activity
            android:name="pl.edu.zut.mwojtalewicz.friendlocalizer.SearchFriendsList"
            android:label="@string/title_activity_search_friends_list" >
        </activity>
        <activity
            android:name="pl.edu.zut.mwojtalewicz.friendlocalizer.NewInviteToFriends"
            android:label="@string/title_activity_new_invite_to_friends" >
        </activity>
    </application>

</manifest>
